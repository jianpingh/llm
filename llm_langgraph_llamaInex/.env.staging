# ==============================================
# 测试环境配置
# ==============================================

# 继承基础配置，覆盖特定设置
ENVIRONMENT=staging

# OpenAI 配置 - 测试环境
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# 调试设置
DEBUG=false
LOG_LEVEL=INFO
SHOW_DETAILED_ERRORS=false
ENABLE_DEV_TOOLS=false
ENABLE_HOT_RELOAD=false

# 测试数据库
CHROMA_PERSIST_DIRECTORY=./indexes/staging_chroma_db

# 中等限制用于测试
MAX_FILE_SIZE_MB=25
RETRIEVAL_TOP_K=4
MAX_WORKFLOW_ITERATIONS=4

# 测试端口
STREAMLIT_PORT=8502

# 缓存设置
ENABLE_CACHE=true
CACHE_TYPE=file
CACHE_TTL=1800

# 统计设置
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# API 限制
API_RATE_LIMIT=30
MAX_CONCURRENT_REQUESTS=5
